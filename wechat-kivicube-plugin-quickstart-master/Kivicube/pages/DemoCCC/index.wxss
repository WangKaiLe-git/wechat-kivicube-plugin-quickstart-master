/* Kivicube/pages/DemoCCC/index.wxss */
.cameras{
  overflow: hidden;
  width: 100%;
  height: 100vh;
  justify-content: center;
  align-items: center;
  position: relative;
}

.cover_back{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hint{
  position: absolute;
  top: 200rpx;
  left: 0rpx;
  font-size: 30rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
  color:#FA7A14;
   z-index: 99;
}
.scan_back{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  display: block;
  z-index: 98;
}
.scan_lo{
  width: 460rpx;
  height: 460rpx;
  position: relative;
  overflow: hidden; 
}
.scan_img{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 460rpx;
  height: 460rpx;
  display: block;
  z-index: 100;
  border: 1px solid #00000000
}
.camera_title{
  position: fixed;
  top: 100rpx;
  left: 40rpx;
  color:#FFFFFF;
  font-size: 30rpx;
  display: flex;
  justify-content: flex-start; 
  align-items: center;
  z-index: 99;
}
.trans-y {
  animation: site-trans 2.6s infinite ease-in-out;
  border: 1px solid #00000000
}

@keyframes site-trans {
    0% {
        transform: translateY(-260px);
    }
    100% {
        transform: translateY(260px);
    }
}